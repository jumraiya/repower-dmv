{
  "name": "repower-dmv",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "db:console": "sqlite3 prisma/data.db",
    "db:create-migration": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "dev": "remix dev -c \"npm run dev:serve\"",
    "dev:serve": "cross-env NODE_OPTIONS=\"--import ./mocks/index.js\" remix-serve ./build/index.js",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint . --fix",
    "setup": "prisma generate && prisma migrate deploy",
    "start": "remix-serve ./build/index.js",
    "start:mocks": "NODE_OPTIONS=\"--import ./mocks/index.js\" remix-serve ./build/index.js",
    "test": "vitest --run",
    "test:dev": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc && tsc -p cypress",
    "validate": "npm-run-all --parallel test lint typecheck test:e2e:run",
    "load-csv": "tsx scripts/load-contractors-csv.ts"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@prisma/client": "^6.4.1",
    "@radix-ui/react-slot": "^1.2.2",
    "@remix-run/css-bundle": "^2.16.4",
    "@remix-run/node": "^2.15.3",
    "@remix-run/react": "^2.15.3",
    "@remix-run/serve": "^2.15.3",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "isbot": "^5.1.23",
    "lucide-react": "^0.487.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-select": "^5.10.0",
    "react-social-icons": "^6.24.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.16.4",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/eslint": "^8.56.12",
    "@types/node": "^22.13.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^3.0.8",
    "autoprefixer": "^10.4.21",
    "cookie": "^1.0.2",
    "cross-env": "^7.0.3",
    "cypress": "^14.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-cypress": "^3.6.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.0.0",
    "happy-dom": "^15.11.6",
    "msw": "^2.6.6",
    "npm-run-all2": "^7.0.1",
    "postcss": "^8.5.3",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "prisma": "^6.5.0",
    "start-server-and-test": "^2.0.8",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "vite": "^5.4.16",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^3.0.8"
  },
  "overrides": {
    "cookie": "^1.0.2",
    "esbuild": "^0.25.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
